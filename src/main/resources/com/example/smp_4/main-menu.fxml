<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smp_4.MainMenuController">
   <children>
      <GridPane layoutX="-1.0" layoutY="-1.0" prefHeight="400.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="SpecialtyPizzaButton" contentDisplay="TOP" layoutX="2.0" layoutY="2.0" mnemonicParsing="false" onAction="#specialtyPizzaMenu" prefHeight="200.0" prefWidth="300.0" text="Order Specialty Pizza">
                     <graphic>
                        <ImageView fx:id="specialtyPizzaImage" fitHeight="167.0" fitWidth="278.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <Button fx:id="buildPizzaButton" contentDisplay="TOP" layoutX="4.0" layoutY="2.0" mnemonicParsing="false" onAction="#buildPizza" prefHeight="200.0" prefWidth="293.0" text="Build Your Own Pizza">
                     <graphic>
                        <ImageView fx:id="bYOPizzaImage" fitHeight="153.0" fitWidth="263.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children></AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
               <children>
                  <Button fx:id="yourOrderButton" contentDisplay="TOP" layoutX="4.0" layoutY="3.0" mnemonicParsing="false" onAction="#yourOrder" prefHeight="194.0" prefWidth="293.0" text="Your Order">
                     <graphic>
                        <ImageView fx:id="orderImage" fitHeight="150.0" fitWidth="269.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children></AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Button fx:id="storeOrderButton" contentDisplay="TOP" layoutY="3.0" mnemonicParsing="false" onAction="#storeOrder" prefHeight="194.0" prefWidth="293.0" text="Store Order">
                     <graphic>
                        <ImageView fx:id="storeOrderImage" fitHeight="150.0" fitWidth="273.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children></AnchorPane>
         </children>
      </GridPane>
   </children>
</AnchorPane>
