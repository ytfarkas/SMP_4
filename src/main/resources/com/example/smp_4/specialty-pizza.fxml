<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="517.0" prefWidth="410.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smp_4.SpecialtyPizzaController">
   <children>
      <AnchorPane prefHeight="517.0" prefWidth="410.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../java/com/example/Images/Specialty_Pizza.png" />
               </image>
            </ImageView>
            <ComboBox fx:id="Pizza_Selection" layoutX="229.0" layoutY="38.0" onAction="#SelectPizza" prefWidth="150.0" promptText="Select Pizza" />
            <RadioButton fx:id="sizeSmall" layoutX="229.0" layoutY="71.0" mnemonicParsing="false" onAction="#pizzaSize" text="Small">
               <toggleGroup>
                  <ToggleGroup fx:id="Size" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="sizeMedium" layoutX="229.0" layoutY="103.0" mnemonicParsing="false" onAction="#PizzaSize" text="Medium" toggleGroup="$Size" />
            <RadioButton fx:id="sizeLarge" layoutX="229.0" layoutY="131.0" mnemonicParsing="false" onAction="#PizzaSize" text="Large" toggleGroup="$Size" />
            <ListView fx:id="toppingsBox" layoutX="14.0" layoutY="200.0" prefHeight="200.0" prefWidth="200.0" />
            <Label layoutX="229.0" layoutY="266.0" prefHeight="17.0" prefWidth="92.0" text="Sauce" />
            <TextField fx:id="sauceBox" editable="false" layoutX="224.0" layoutY="288.0" />
            <CheckBox fx:id="extraSauceBox" layoutX="224.0" layoutY="321.0" mnemonicParsing="false" text="Extra Sauce" />
            <CheckBox fx:id="extraCheeseBox" layoutX="224.0" layoutY="351.0" mnemonicParsing="false" text="Extra Cheese" />
            <Button fx:id="ConfirmPizza" layoutX="294.0" layoutY="449.0" mnemonicParsing="false" text="Confirm" />
            <TextField fx:id="priceBox" editable="false" layoutX="53.0" layoutY="449.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
